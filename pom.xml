
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent> 
        <groupId>org.jenkins-ci.plugins</groupId> 
        <artifactId>plugin</artifactId> 
        <version>1.480.3</version>
    </parent>

    <groupId>com.programmingresearch</groupId>
    <artifactId>prqa-plugin</artifactId>
    <version>2.0.8-SNAPSHOT</version>
    <packaging>hpi</packaging>
    <name>PRQA plugin</name>
    <description>Integrates PRQA static analysis with Jenkins</description>
    <url>https://wiki.jenkins-ci.org/display/JENKINS/PRQA+Plugin</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>copertura</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <formats>
                                <format>html</format>
                                <format>xml</format>
                            </formats>
                        </configuration>
                        <executions>
                            <execution>
                                <id>do-coverage</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>cobertura</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
 
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>    
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </repository>
        <repository>
            <id>bintray</id>
            <url>https://bintray.com/prqa/maven</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <licenses>
        <license>
            <name>MIT</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url> 
        </license>
    </licenses>

    <developers>
        <developer>
            <id>isanych</id>
            <name>Igor Kostenko</name>
            <email>igor_kostenko@programmingresearch.com</email>
            <organization>Programming Research</organization>
            <roles>
                <role>maintainer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
        <developer>
            <id>AlexIon</id>
            <name>Alexandru Ion</name>
            <email>alexandru.ion@rinf.ro</email>
            <organization>RINF</organization>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>+2</timezone>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>com.programmingresearch</groupId>
            <artifactId>prqa</artifactId>
            <version>2.0.8</version>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:git:ssh://github.com/jenkinsci/prqa-plugin.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/jenkinsci/prqa-plugin.git</developerConnection>
        <url>https://github.com/jenkinsci/prqa-plugin</url>
    </scm>
</project>
